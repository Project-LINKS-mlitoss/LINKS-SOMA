{
  "extends": "../tsconfig.json",

  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false
    // ...
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules", "../dist", "../build"]
}
